{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~components/*": ["./src/components/*"],
      "~styles/*": ["./src/styles/*"],
      "~domains/*": ["./src/domains/*"],
      "~helpers/*": ["./src/helpers/*"],
      "~config/*": ["./src/config/*"],
      "~pages/*": ["./src/pages/*"],
      "~types/*": ["./src/types/*"],
      "~assets/*": ["./src/assets/*"],
      "~redux/*": ["./src/redux/*"],
      "~normalizers/*": ["./src/normalizers/*"],
      "~api/*": ["./src/app/api/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
